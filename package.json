  "license": "Unlicensed",
  "lint-staged": {
    "linters": {
      "*.{js,jsx,mjs,ts,tsx,css,less,scss,json,graphql}": ["prettier --write", "git add"],
      "*.md": ["git add"],
      "*.md,!test/snapshots/**/*.md,!test/**/snapshots/**/*.md,!locales/README.md": [
        "remark . -qfo"
      ]
    }
  },
  "remarkConfig": {
    "plugins": ["preset-github"]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ladjs/lad"
  },
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "lint": "xo && npm run lint-md",
    "lint-md":
      "node -e \"require('shelljs').echo('# Temp\\n').to('./temp.md')\" && remark . -qfo && node -e \"require('shelljs').rm('./temp.md')\"",
    "precommit": "lint-staged && npm test",
    "test": "npm run lint && npm run test-coverage",
    "test-coverage": "cross-env NODE_ENV=test nyc ava --verbose",
    "build": "gulp build",
    "publish-assets": "cross-env NODE_ENV=production gulp publish",
    "start":
      "concurrently -p \"[{name}]\" -n \"WATCH,API,WEB,AGENDA\" -c \"bgCyan.bold,bgBlue.bold,bgMagenta.bold,bgGreen.bold,bgYellow.bold\" \"npm run watch\" \"npm run start-api\" \"npm run start-web\" \"npm run start-agenda\"",
    "start-agenda": "nodemon agenda.js",
    "start-api": "nodemon api.js",
    "start-web": "nodemon web.js",
    "watch": "gulp watch"
  },
  "xo": {
    "extends": "prettier",
    "plugins": ["prettier"],
    "parserOptions": {
      "sourceType": "script"
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "bracketSpacing": true,
          "trailingComma": "none"
        }
      ],
      "max-len": [
        "error",
        {
          "code": 100,
          "ignoreUrls": true
        }
      ],
      "capitalized-comments": "off",
      "camelcase": "off",
      "no-warning-comments": "off"
    },
    "space": true,
    "overrides": [
      {
        "plugins": ["prettier", "compat"],
        "settings": {
          "polyfills": ["fetch"]
        },
        "parserOptions": {
          "sourceType": "script"
        },
        "files": "assets/js/**/*.js",
        "envs": ["browser"],
        "rules": {
          "compat/compat": "error"
        }
      }
    ]
  }
}
